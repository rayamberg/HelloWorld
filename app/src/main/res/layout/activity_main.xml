<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#cfff"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <!-- Clock TextView  -->

    <TextView
        android:id="@+id/text_clock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="0"
        android:textSize="80sp"
        />


    <!-- Layout for Setting Interval and Sets -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_caption_intervals"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Interval (sec)"
                android:gravity="center"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/text_intervals"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_caption_intervals"
                android:text="@string/text_intervals"
                android:layout_weight="1"
                android:textSize="80sp"
                android:gravity="center"
                android:inputType="number"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_caption_rest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rest (sec)"
                android:gravity="center"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/text_rest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_caption_rest"
                android:text="@string/text_rest"
                android:layout_weight="1"
                android:textSize="80sp"
                android:gravity="center"
                android:inputType="number"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_caption_sets"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sets"
                android:gravity="center"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/text_sets"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_caption_sets"
                android:text="@string/text_sets"
                android:layout_weight="1"
                android:textSize="80sp"
                android:gravity="center"
                android:inputType="number"/>

        </RelativeLayout>
    </LinearLayout>

    <!-- Start Button -->

    <Button
        android:id="@+id/button_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Start"
        android:textSize="20sp"
        />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Cancel"
        android:textSize="20sp" />


</LinearLayout>